<Window x:Class="ProcessMonitor.App.Views.ConnectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect to server" Width="320" Height="112" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Label Content="_Server:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Target="{Binding ElementName=serverBox}" />
        <TextBox x:Name="serverBox" VerticalAlignment="Top" Margin="61,14,10,0" />
        
<Button Content="Connect" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,95,10" IsDefault="True" Command="{Binding Path=ConnectCommand}" />
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,10,10" IsCancel="True" />
    </Grid>
</Window>
